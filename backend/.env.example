# FastAPI settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Firebase settings
FIREBASE_CREDENTIALS=path/to/firebase-credentials.json
FIREBASE_STORAGE_BUCKET=your-storage-bucket.appspot.com

# Zilliz Cloud settings
ZILLIZ_URI=https://your-instance-id.zillizcloud.com
ZILLIZ_API_KEY=your-zilliz-api-key
ZILLIZ_COLLECTION_NAME=document_embeddings

# LLM settings
GROQ_API_KEY=your-groq-api-key
LLM_MODEL=llama3-70b-8192
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Embedding settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector DB settings
VECTOR_DB_TYPE=zilliz # Options: "zilliz" or "qdrant"
QDRANT_URL=https://your-qdrant-instance
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=document_embeddings